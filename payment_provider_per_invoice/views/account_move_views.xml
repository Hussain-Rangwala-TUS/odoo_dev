<?xml version="1.0"?>
<odoo>

    <record id="account_invoice_view_form_inherit_payment" model="ir.ui.view">
        <field name="name">account.move.view.form.inherit.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_payment_term_id']" position="after">
                <field name="payment_provider" invisible="1"/>
                <field name="payment_provider_ids" widget="many2many_tags" options="{'no_create_edit': True}"
                       attrs="{'invisible': [('payment_provider', '=', False)]}"/>
                <!--                options="{'no_create_edit': True, 'no_quick_create': True}"-->
            </xpath>
        </field>
    </record>

</odoo>
